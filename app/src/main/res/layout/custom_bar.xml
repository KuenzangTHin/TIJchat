<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/custom_profile_pic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profiledef" />

    <TextView
        android:id="@+id/custom_profile_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="80dp"
        android:layout_marginStart="80dp"
        android:layout_toEndOf="@+id/custom_profile_pic"
        android:layout_toRightOf="@+id/custom_profile_pic"
        android:text="UserName"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/custom_last_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/custom_profile_pic"
        android:layout_alignEnd="@+id/custom_profile_name"
        android:layout_alignRight="@+id/custom_profile_name"
        android:text="Last seen Online"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>